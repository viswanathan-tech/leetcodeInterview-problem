class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int startIndex = 0;
        int totalGas = 0;
        int totalCost = 0;
        int len = gas.length;
        for(int i=0;i<len;i++)
        {
            totalGas += gas[i];
            totalCost += cost[i];
        }

        if(totalGas < totalCost)
        {
            return -1;
        }
        int currentGas = 0;
        for(int i=0;i<len;i++)
        {
            currentGas = currentGas+gas[i]-cost[i];
            if(currentGas<0)
            {
                currentGas = 0;
                startIndex = i+1;
            }
        }
        return startIndex;
    }
}
